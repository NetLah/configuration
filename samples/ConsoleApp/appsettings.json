{
  "ConfigurationSource": [
    //{
    //  "Type": "Settings",
    //  "Logging": "Information"
    //},
    "OtherConfig/appsettings.ini"
  ],
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=localhost;Initial Catalog=database_name;Integrated Security=True;"
  },
  "Transform": [
    "Serilog:MinimumLevel:Override:Microsoft.AspNetCore.Authentication=Information"
  ],
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "App": "Information"
      }
    },
    "WriteTo:0": { "Name": "Console" },
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {}
  }
}
